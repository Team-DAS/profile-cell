{
  "name": "dashboard-service",
  "version": "1.0.0",
  "description": "GraphQL-based read-only microservice for profile data",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "graphql",
    "dashboard",
    "mongodb",
    "prometheus",
    "microservice"
  ],
  "author": "Team-DAS",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "mongoose": "^8.1.1",
    "prom-client": "^15.1.0",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.1",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
